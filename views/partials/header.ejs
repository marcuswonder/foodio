    // navRecipeSearch.classList.remove('nav-element-content-revealed');
    // navRecipeSearch.classList.add('nav-element-content-hidden');
    navRecipeAdd.classList.remove('nav-element-content-revealed');
    navRecipeAdd.classList.add('nav-element-content-hidden');
}


const navCollectionTitleContainerEl = document.getElementById('nav-collections-element-container')
const navCollectionSearch = document.getElementById('nav-collections-search')
const navCollectionAdd = document.getElementById('nav-collections-add')

navCollectionTitleContainerEl.onmouseover = function() {
    // navCollectionSearch.classList.remove('nav-element-content-hidden');
    // navCollectionSearch.classList.add('nav-element-content-revealed');
    navCollectionAdd.classList.remove('nav-element-content-hidden');
    navCollectionAdd.classList.add('nav-element-content-revealed');
}

navCollectionTitleContainerEl.onmouseleave = function() {
    // navCollectionSearch.classList.remove('nav-element-content-revealed');
    // navCollectionSearch.classList.add('nav-element-content-hidden');
    navCollectionAdd.classList.remove('nav-element-content-revealed');
    navCollectionAdd.classList.add('nav-element-content-hidden');
}



const navMyKitchenTitleContainerEl = document.getElementById('nav-my-kitchen-element-container')
const navMyKitchenRecipes = document.getElementById('nav-my-kitchen-recipes')
const navMyKitchenCollections = document.getElementById('nav-my-kitchen-collections')

if(navMyKitchenRecipes) {
    navMyKitchenTitleContainerEl.onmouseover = function() {
        navMyKitchenRecipes.classList.remove('nav-element-content-hidden');
        navMyKitchenRecipes.classList.add('nav-element-content-revealed');
        navMyKitchenCollections.classList.remove('nav-element-content-hidden');
        navMyKitchenCollections.classList.add('nav-element-content-revealed');
    }
}

if(navMyKitchenRecipes) {
    navMyKitchenTitleContainerEl.onmouseleave = function() {
        navMyKitchenRecipes.classList.remove('nav-element-content-revealed');
        navMyKitchenRecipes.classList.add('nav-element-content-hidden');
        navMyKitchenCollections.classList.remove('nav-element-content-revealed');
        navMyKitchenCollections.classList.add('nav-element-content-hidden');
    }
}



// Burger Nav Script
const burgerNavMenu = document.getElementById('burger-nav-menu')
const burgerNavMenuClose = document.getElementById('burger-nav-menu-close')
const burgerNavContentEls = document.getElementsByClassName('burger-nav-element-content')
const burgerNavSubContentEls = document.getElementsByClassName('burger-nav-element-sub-content')
const burgerNavRecipeSubContentEls = document.getElementsByClassName('burger-nav-element-recipes-sub-content')
const burgerNavCollectionSubContentEls = document.getElementsByClassName('burger-nav-element-collections-sub-content')
const burgerNavMyKitchenSubContentEls = document.getElementsByClassName('burger-nav-element-my-kitchen-sub-content')
const burgerNavAccountSubContentEls = document.getElementsByClassName('burger-nav-element-account-sub-content')


burgerNavMenu.onclick = function() {
    setBurgerNavSubElsToHidden()
    burgerNavMenu.style.display = 'none'
    burgerNavMenuClose.style.display = 'flex'
    Array.from(burgerNavContentEls).forEach(element => {
        element.style.display = 'flex'
    });
}

burgerNavMenuClose.onclick = function() {
    setBurgerNavSubElsToHidden()
    burgerNavMenu.style.display = 'flex'
    burgerNavMenuClose.style.display = ''
    Array.from(burgerNavContentEls).forEach(element => {
        element.style.display = ''
    });
}



const burgerNavRecipeTitle = document.getElementById('burger-nav-recipes-title') 
const burgerNavRecipeSearch = document.getElementById('burger-nav-recipes-search')
const burgerNavRecipeAdd = document.getElementById('burger-nav-recipes-add')

burgerNavRecipeTitle.onclick = function() {
    if(burgerNavRecipeSearch.classList.contains('burger-nav-element-content-hidden') ) {
        setBurgerNavSubElsToHidden()
        setSpecificSubElsToRevealed(burgerNavRecipeSubContentEls)
    
    } else {
        setBurgerNavSubElsToHidden()
    }
}

const burgerNavCollectionTitle = document.getElementById('burger-nav-collections-title') 
const burgerNavCollectionSearch = document.getElementById('burger-nav-collections-search')
const burgerNavCollectionAdd = document.getElementById('burger-nav-collections-add')

burgerNavCollectionTitle.onclick = function() {
    if(burgerNavCollectionSearch.classList.contains('burger-nav-element-content-hidden') ) {
        setBurgerNavSubElsToHidden()
        setSpecificSubElsToRevealed(burgerNavCollectionSubContentEls)
    
    } else {
        setBurgerNavSubElsToHidden()
    }
}


const burgerNavMyKitchenTitle = document.getElementById('burger-nav-my-kitchen-title') 
const burgerNavMyKitchenRecipes = document.getElementById('burger-nav-my-kitchen-recipes')
const burgerNavMyKitchenCollections = document.getElementById('burger-nav-my-kitchen-collections')

if(burgerNavMyKitchenTitle) {
    burgerNavMyKitchenTitle.onclick = function() {
        if(burgerNavMyKitchenRecipes.classList.contains('burger-nav-element-content-hidden') ) {
            setBurgerNavSubElsToHidden()
            setSpecificSubElsToRevealed(burgerNavMyKitchenSubContentEls)
        } else {
            setBurgerNavSubElsToHidden()
        }
    }
}

const burgerNavAccountTitle = document.getElementById('burger-nav-account-title') 
const burgerNavAccountProfile = document.getElementById('burger-nav-account-profile')
const burgerNavAccountLogOut = document.getElementById('burger-nav-account-LogOut')

if(burgerNavAccountTitle) {
    burgerNavAccountTitle.onclick = function() {
        if(burgerNavAccountLogOut.classList.contains('burger-nav-element-content-hidden') ) {
            setBurgerNavSubElsToHidden()
            setSpecificSubElsToRevealed(burgerNavAccountSubContentEls)
        } else {
            setBurgerNavSubElsToHidden()
        }
    }
}




// Helper Functions

function setBurgerNavSubElsToHidden() {
    Array.from(burgerNavSubContentEls).forEach(element => {
        if(!element.classList.contains('burger-nav-element-content-hidden')) {
            element.classList.remove('burger-nav-element-content-revealed')
            element.classList.add('burger-nav-element-content-hidden')

        }
    })
}

function setSpecificSubElsToHidden(HTML) {
    Array.from(HTML).forEach(element => {
        if(!element.classList.contains('burger-nav-element-content-hidden')) {
            element.classList.remove('burger-nav-element-content-revealed')
            element.classList.add('burger-nav-element-content-hidden')

        }
    })
}

function setSpecificSubElsToRevealed(HTML) {
    Array.from(HTML).forEach(element => {
        if(!element.classList.contains('burger-nav-element-content-revealed')) {
            element.classList.remove('burger-nav-element-content-hidden')
            element.classList.add('burger-nav-element-content-revealed')
        }
    })
}


</script>

