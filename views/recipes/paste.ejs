<%- include('../partials/header') %>

<title>Paste Recipe</title>
<h1>Paste the link to a recipe from the internet</h1>

<form id="paste-recipe" method="POST" action="/recipes/paste">
    <input type="text" class="med-input" id="paste" name="recipeLink">
    <br>
    <select name="category" class="input">
        <st>How would you categorise this recipe?</st><br></td>
        <option disabled selected value> -- Select a Category -- </option>
        <option value="Snack">Snack</option>
        <option value="Starter">Starter</option>
        <option value="Side">Side</option>
        <option value="Main Course">Main Course</option>
        <option value="Desert">Desert</option>
        <option value="Cocktail">Cocktail</option>
        </select>
        <br>
    <br>
    <button type="submit" class="reg-button">Import Recipe</button>
</form>

